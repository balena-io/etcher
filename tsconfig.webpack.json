{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2019",
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./typings"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "lib/**/*.ts",
    "node_modules/electron/**/*.d.ts"
  ]
}
